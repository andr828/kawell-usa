<div class="farriers-banner">
    <div class="farriers-banner--left">
      <img
      srcset="{%- if section.settings.hero_left_img.width >= 550 -%}{{ section.settings.hero_left_img | image_url: width: 550 }} 550w,{%- endif -%}
        {%- if section.settings.hero_left_img.width >= 720 -%}{{ section.settings.hero_left_img | image_url: width: 720 }} 720w,{%- endif -%}
        {%- if section.settings.hero_left_img.width >= 990 -%}{{ section.settings.hero_left_img | image_url: width: 990 }} 990w,{%- endif -%}
        {%- if section.settings.hero_left_img.width >= 1100 -%}{{ section.settings.hero_left_img | image_url: width: 1100 }} 1100w,{%- endif -%}
        {%- if section.settings.hero_left_img.width >= 1500 -%}{{ section.settings.hero_left_img | image_url: width: 1500 }} 1500w,{%- endif -%}
        {%- if section.settings.hero_left_img.width >= 2200 -%}{{ section.settings.hero_left_img | image_url: width: 2200 }} 2200w,{%- endif -%}
        {%- if section.settings.hero_left_img.width >= 3000 -%}{{ section.settings.hero_left_img | image_url: width: 3000 }} 3000w,{%- endif -%}
        {{ section.settings.hero_left_img | image_url }} {{ section.settings.hero_left_img.width }}w"
      src="{{ section.settings.hero_left_img | image_url: width: 1500 }}"
      sizes="(min-width: {{ settings.page_width }}px) {% if section.blocks.size == 1 %}calc({{ settings.page_width }}px - 100px){% else %}{{ settings.page_width | minus: 100 | times: 0.67 | round }}px{% endif %}, (min-width: 750px){% if section.blocks.size == 1 %} calc(100vw - 100px){% else %} 500px{% endif %}, calc(100vw - 30px)"
      alt="{{ section.settings.hero_left_img.alt | escape }}"
      loading="lazy"
      width="{{ section.settings.hero_left_img.width }}">
    </div>

    <div class="farriers-banner--right" style="background-color: {{section.settings.hero_right_bg_color}};">
      <div class="farriers-banner--right--main">
        <h1 style="color: {{ section.settings.hero_right_title_color }}">
          {{section.settings.hero_right_title}}
        </h1>
  
        <p>{{section.settings.hero_right_desc}}</p>
      </div>
    </div>
</div>

{% schema %}
{
  "name": "Farieers Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_left_img",
      "label": "Hero Left Img"
    },
    {
      "type": "color",
      "id": "hero_right_title_color",
      "label": "Hero Right title color",
      "default": "#C45219"
    },
    {
      "type": "text",
      "id": "hero_right_title",
      "label": "Hero Right Title",
      "default": "About Our Farriers"
    },
    {
      "type": "textarea",
      "id": "hero_right_desc",
      "label": "Hero Right Desc"
    }
  ]
}
{% endschema %}
