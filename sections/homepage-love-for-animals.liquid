<div
  style="width:100%;background:white"
  id="blackbannerwrapper1"
  class="blackbannerwrapper">
  <div
    id="blackbanner1"
    class="blackbanner"
    style="background:url('{{section.settings.background_image | img_url: 'master'}}') 100% 25% no-repeat black;">
    <div
      class="blackbannerinner1">
      <h2>{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_desc }}</p>
      <a
        class="love--learn-more"
        href="{{section.settings.btn_url}}">{{ section.settings.btn_label }}</a>
    </div>

    <div
      class="blackbannerinner2"></div>
  </div>
</div>

{% schema %}
  {
    "name": "Love For Animals",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Love for Animals"
      },
      {
        "type": "textarea",
        "id": "section_desc",
        "label": "Section Description",
        "default": "Kawell USA cares for the total welfare of your animal. We developed a new line of products based on natural extracts for animal skin and oral care for your horse, dog, cat or other furry friend. Our products are based on the best elements of nature. We add passion, love and quality in each detail to offer the best products on the market."
      },
      {
        "type": "text",
        "id": "btn_label",
        "label": "Button Label",
        "default": "Learn More About Us"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button Url"
      }, {
        "type": "image_picker",
        "label": "Background Image",
        "id": "background_image"
      }

    ],

    "presets": [
      {
        "name": "Love For Animals",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}