<div data-section-id="{{ section.id }}" data-section-type="instagram-section">
  <div id="instagram-section-{{ section.id }}" class="instagram-section">  
    <div style="position:relative;">
      <h3>Code:</h3>
      <code>
        <!-- Shortcode product --> 
        [instagram user_id="{{section.settings.instagram_user_id}}" token="{{section.settings.instagram_accesstoken}}" limit="{{section.settings.instagram_limit}}" autoplay="{{section.settings.autoplay}}" desktop_large="{{section.settings.item_desktop_large}}" desktop="{{section.settings.item_desktop}}" tablet="{{section.settings.item_tablet}}" mobile="{{section.settings.item_mobile}}" ] 
        <!-- / Shortcode product -->
      </code>
      <div class="block-instafeed blog-wrap">
        <div class="blog-items blog-grid-items"> 
          <div class="blog-instagrams owl-carousel instagram-feed-carousel owl-lazy-container owl-loaded owl-drag" data-count="{{ section.settings.instagram_limit }}" data-userid="{{ section.settings.instagram_user_id }}" data-token="{{ section.settings.instagram_accesstoken }}" data-itemclass="col-md-ic-1" data-autoplay="{{ section.settings.autoplay }}" data-desktop="{{ section.settings.item_desktop }}" data-desktop-large="{{ section.settings.item_desktop_large }}" data-tablet="{{ section.settings.item_tablet }}" data-mobile="{{ section.settings.item_mobile }}" data-nav="false" data-page="false" data-margin="0"></div>
        </div>
      </div>
      <style> 
        .enable-effect .insta-item .content {
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          transition: all .3s;
          background-color: rgba(255, 0, 0, .5);
          color: #fff;
          font-size: 35px;
          text-align: center;
          opacity: 0;
          visibility: hidden;
          z-index: 1;
        }

        .enable-effect .insta-item:hover .content {
          opacity: 1;
          visibility: visible;
        }

        .insta-item .content i {
          display: none;
          position: absolute;
          top: 50%;
          transform: translate(-50%, -50%);
          -webkit-transform: translate(-50%, -50%);

          .enable-effect & {display: inline-block;}
        }
      </style>
    </div> 
  </div>
</div>
