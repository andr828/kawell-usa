<div data-section-id="{{ section.id }}" data-section-type="products-banner-section">
  <div class="slideshow-content-product {% if section.settings.text_content_location == 'right' %}parallax_02{% else %}parallax_03{% endif %}" style="background-color:{{section.settings.bg_section_color}}; margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    {%- if section.settings.background_image != blank -%}
    {%- assign bg_url = section.settings.background_image | img_url: 'master' -%}
    {%- else -%}
    {%- assign bg_url = 'bg1904x981.png' | asset_url -%}
    {%- endif -%}
    <div id="products-banner-{{ section.id }}" class="lazyload lazypreload" data-bg="{{ bg_url }}" style="background: 50% 0 no-repeat fixed;color:#fff;margin:0 auto;">
      <div class="parallax-content-15">
        <div class="container" style="{% if section.settings.text_content_location == 'right' %}text-align: right;{% else %}text-align: left;{% endif %}">
          <div class="text-content" style="display: inline-block">
            {%- if settings.language_enable -%}
            <div class="lang1">{{ section.settings.text_content | split: '[lang2]' | first }}</div>
            <div class="lang2">{{ section.settings.text_content | split: '[lang2]' | last }}</div>
            {%- else -%}
            {{ section.settings.text_content | split: '[lang2]' | first }}
            {%- endif -%}
          </div>
          <div class="html-code-wrapper"> 
            {%- if settings.language_enable -%}
              <div class="lang1">
                {%- assign content_lg1 = section.settings.html | split: '[lang2]' | first -%}
                {% include 'shortcode' load: content_lg1 %}
              </div>
              <div class="lang2">
                {%- assign content_lg2 = section.settings.html | split: '[lang2]' | last -%}
                {% include 'shortcode' load: content_lg2 %} 
              </div>
              {%- else -%}
              {%- assign content_lg = section.settings.html | split: '[lang2]' | first -%}
                {% include 'shortcode' load: content_lg %}
              {%- endif -%} 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
