<div class="mobile-canvas-overlay close-left"></div>
<!-- end config style -->
<div class="block-main-canvas canvas-left">
  <div class="canvas-icon sicon-left d-block d-lg-none"><a href="javascript:void(0)"><i class="fa fa-sliders"></i></a></div>
  <div class="canvas-inner sidebar-style-{{ section.settings.sidebar_style }}">
    {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'html' -%}
        <div class="block html-sidebar">
          {% if settings.language_enable %}
          <div class="lang1">{{ block.settings.html| split: '|' | first }}</div>
          <div class="lang2">{{ block.html | split: '|' | last }}</div>
          {% else %}
          {{ block.settings.html | split: '|' | first }}
          {% endif %}
        </div>  
      {%- when 'menu' -%}
    	<div class="main-sidebar-menu ">
        {%- include 'sidebar-sidemenu', sb_menu: block.settings.menu -%}
    	</div>
      {%- endcase -%}
      {%- endfor -%}
    {%- endif -%} 
  </div>
</div>
<script type="text/javascript">
  jQuery(function($) {
    $('.canvas-icon.sicon-left, .close-left').click(function(event) {
      if(!$('body').hasClass('canvas-left')) {
        $('body').addClass('mobile-canvas-shown');
        $('body').addClass('canvas-left', function() {
          setTimeout(function(){
            $(document).one("click",function(e) {
              var target = e.target;
              if (!$(target).is('.canvas-left .block') && !$(target).parents().is('.canvas-left .canvas-inner')) {
                $('body').removeClass('canvas-left');
                $('body').removeClass('mobile-canvas-shown');
              }
            });
          }, 111);
        });
      } else{
        $('body').removeClass('canvas-left');
    $('body').removeClass('mobile-canvas-shown');
      }
    });
  });
</script>

{% schema %}
{
  "name": "Sidebar Left",
  "settings": [
    {
      "type": "header",
      "content": "General"
    }, 
    {
      "type": "select",
      "id": "sidebar_style",
      "label": "Sidebar Style",
      "options": [
        {
          "value": "1",
          "label": "Style 1"
        },
        {
          "value": "2",
          "label": "Style 2"
        },
        {
          "value": "3",
          "label": "Style 3"
        }
      ],
      "default": "1"
    }
  ],
  "blocks": [
    {
      "type": "html",
      "name": "Custom Block",
      "settings": [  
        {
          "type": "header", 
          "content": "Custom Html"
        },
        {
          "type": "html",
          "id": "html",
          "label": "Custom Block",
          "default": "<h2>Custom HTML Block</h2><h5>This is a custom sub-title.</h5><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras non placerat mi. Etiam non tellus </p>"
        } 
      ]
    },
    {
      "type": "menu",
      "name": "Side Menu",
      "limit": 1,
      "settings": [
        {
          "type": "header", 
          "content": "General"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Sidebar Menu"
        }
      ]
    } 
  ] 
}
{% endschema %}