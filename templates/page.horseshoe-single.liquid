  opacity: .5;
}

.arrow {
  position: absolute;
  top: 150px;
  transform: translateY(-50%);
  font-size: 30px;
}

.arrow_left {
  cursor: pointer;
  left: -40px;
  }

.arrow_right {
  cursor: pointer;
  right: -40px;
}
  
