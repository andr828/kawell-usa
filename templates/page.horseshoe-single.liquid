        {% include 'shortcode' load: content_lg %}
      {%- endif -%} 
    </div>
  </div>








<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
var $previewImg = $('.slider__preview img');
var $bigImg = $('.slider__big-img img');
var $arrowLeft = $('.arrow_left');
var $arrowRight = $('.arrow_right');

var currentIndex = 0;

$previewImg.on('click', function() {
  var src = $(this).attr('src');

  $bigImg.fadeOut(200, function(){
    $bigImg.attr('src',src);
  });
  $bigImg.fadeIn(200);

  var previewIndex = $(this).index('.slider__preview img');
  currentIndex = previewIndex;
  });

$arrowRight.on('click', function() {
  if (currentIndex == $previewImg.lenght -1){
    return;
  }

  var newImg = $previewImg.eq(currentIndex +1);
  var newSrc = newImg.attr('src');

  $bigImg.fadeOut(200, function(){
    $bigImg.attr('src',newSrc);
  });
  $bigImg.fadeIn(200);

  currentIndex++;
});

$arrowLeft.on('click', function() {
  if (currentIndex == 0){
    return;
  }

  var newImg = $previewImg.eq(currentIndex -1);
  var newSrc = newImg.attr('src');

  $bigImg.fadeOut(200, function(){
    $bigImg.attr('src',newSrc);
  });
  $bigImg.fadeIn(200);

  currentIndex--;
  });
</script>

