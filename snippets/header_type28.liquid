{% include 'header-top-bar' %}
<div class="header container">
  <div class="header-left">
    <div class="menu-icon"><a href="javascript:void(0)" title="Menu"><i class="fa fa-bars"></i></a></div>
    {% include 'header-logo' %}
    <div class="main-nav wrapper-top-menu"> 
      <div id="main-top-nav" class="main-top-nav"> 
        <!-- Main Menu -->
        {% include 'main-menu' %}
        <!-- End Main Menu --> 
      </div> 
    </div>
  </div>
  <div class="header-center"> 
    {% include 'header-logo' %}
  </div>
  <div class="header-right">
    <div class="cart-area">
      {% if settings.header_custom_text != '' %}
      <div class="custom-block">
        {% if settings.language_enable %}
        <div class="lang1">{{ settings.header_custom_text | split: '[lang2]' | first }}</div>
        <div class="lang2">{{ settings.header_custom_text | split: '[lang2]' | last }}</div>
        {% else %}
        {{ settings.header_custom_text | split: '[lang2]' | first }}
        {% endif %}
      </div>
      {% endif %} 
      <div class="search-area show-icon">
        <a href="javascript:void(0);" class="search-icon"><span><i class="icon-search"></i></span></a>
        {% include 'header-search' %}
      </div>
      <div class="wishlist">
        <a class="wishlist-popup" href="javascript:void(0)"><i class="Simple-Line-Icons-heart"></i></a>
      </div>
      <div class="mini-cart">
        {% include 'header-cart' %}
      </div>
    </div> 
  </div> 
</div> 
{%- if settings.custom_header_bottom != blank -%}
<div class="header-bottom">
  {% if settings.language_enable %}
  <div class="lang1">{{ settings.custom_header_bottom | split: '[lang2]' | first }}</div>
  <div class="lang2">{{ settings.custom_header_bottom | split: '[lang2]' | last }}</div>
  {% else %}
  {{ settings.custom_header_bottom | split: '[lang2]' | first }}
  {% endif %}
</div>
{%- endif -%}