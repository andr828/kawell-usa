<div class="header header-row container">
  <div class="header-left hidden-sm"> 
    {% if settings.header_custom_text2 != '' %}
      <div class="custom-block2">
        {% if settings.language_enable %}
        <div class="lang1">{{ settings.header_custom_text2 | split: '[lang2]' | first }}</div>
        <div class="lang2">{{ settings.header_custom_text2 | split: '[lang2]' | last }}</div>
        {% else %}
        {{ settings.header_custom_text2 | split: '[lang2]' | first }}
        {% endif %}
      </div>
      {% endif %}
  </div>
  <div class="header-left visible-sm">
    <div class="menu-icon"><a href="javascript:void(0)" title="Menu"><i class="fa fa-bars"></i></a></div> 
    {% include 'header-logo' %}  
  </div>
  <div class="header-center hidden-sm"> 
    {% include 'header-logo' %}  
  </div>
  <div class="header-right"> 
    <div class="cart-area"> 
      <div class="search-area show-icon visible-sm">
        <a href="javascript:void(0);" class="search-icon"><span><i class="icon-search"></i></span></a>
        {% include 'header-search' %}
      </div>
      {% if settings.header_custom_text != '' %}
      <div class="custom-block">
        {% if settings.language_enable %}
        <div class="lang1">{{ settings.header_custom_text | split: '[lang2]' | first }}</div>
        <div class="lang2">{{ settings.header_custom_text | split: '[lang2]' | last }}</div>
        {% else %}
        {{ settings.header_custom_text | split: '[lang2]' | first }}
        {% endif %}
      </div>
      {% endif %}
      <div class="mini-cart">
        {% include 'header-cart' %}
      </div>
    </div> 
  </div> 
</div>
<div class="header-wrapper header-bottom">
  <div class="main-nav wrapper-top-menu">
    <div class="container header-row">
      <div class="header-col header-left hidden-for-sm">    
        <div id="main-top-nav" class="main-top-nav">
          <div class="dropdown-menu">
            <div class="menu-container category-menu-style-{{settings.category_menu_style}}">
              <a href="javascript:void(0)">
                <i class="fa fa-bars"></i>
                {% if settings.header_category_text != '' %}
                {% if settings.language_enable %}
                <span class="lang1">{{ settings.header_category_text  | split: '|' | first }}</span>
                <span class="lang2">{{ settings.header_category_text  | split: '|' | last }}</span>
                {% else %}
                {{ settings.header_category_text  | split: '|' | first }}
                {% endif %}
                {% endif %}
              </a>
              <!-- Main Menu -->
              {% include 'side-menu' %}
              <!-- End Main Menu -->
            </div>
          </div>
        </div>
        <div class="second-menu">
          {% include 'main-menu', include_second_menu: true %}
        </div>
      </div> 
      <div class="header-col header-right hidden-for-sm"> 
        <div class="search-area show-icon-tablet">
          <a href="javascript:void(0);" class="search-icon"><span><i class="icon-search"></i><span {% if settings.language_enable %} data-translate="general.search.submit" {% endif %}>{{ 'general.search.submit' | t }}</span></span></a>
          {% include 'header-search' %}
        </div>
      </div> 
    </div>
  </div>
</div>