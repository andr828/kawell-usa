<div id="menu-settings">
  {%- if settings.currency_enable -%}
  <div class="currency-wrapper">  
    <a href="javascript:void(0);" class="level-top collapsed" data-toggle="collapse" data-target="#currency" aria-expanded="true" aria-controls="currency">
      <span class="current-currency">{{ shop.currency }}</span>
      <i class="icon-angle-down"></i>
    </a>
    <div id="currency" class="collapse" aria-labelledby="currency" data-parent="#menu-settings">
      <ul class="level0 select-currency">
        {% capture codes %},USD,EUR,GBP,CAD,ARS,AUD,BBD,BDT,BSD,BHD,BRL,BOB,BND,BGN,MMK,KYD,CLP,CNY,COP,CRC,HRK,CZK,DKK,DOP,XCD,EGP,XPF,FJD,GHS,GTQ,GYD,GEL,HKD,HUF,ISK,INR,IDR,NIS,JMD,JPY,JOD,KZT,KES,KWD,LVL,LTL,MXN,MYR,MUR,MDL,MAD,MNT,MZN,ANG,NZD,NGN,NOK,OMR,PKR,PYG,PEN,PHP,PLN,QAR,RON,RUB,SAR,RSD,SCR,SGD,SYP,ZAR,KRW,LKR,SEK,CHF,TWD,THB,TZS,TTD,TRY,UAH,AED,UYU,VEB,VND,ZMK,{% endcapture %}
        {% assign supported_codes = settings.supported_currencies | split: ' ' %}
        <li class="selected"><a href="#" data-currency="{{ shop.currency }}">{{ shop.currency }}</a></li>
        {% for code in supported_codes %}
        {% if code != shop.currency and codes contains code %}
        <li><a href="#" data-currency="{{ code }}">{{ code }}</a></li>
        {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div> 
  {%- endif -%}
  {%- if settings.language_enable -%}
  <div class="language-wrapper">  
    <a href="javascript:void(0);" class="level-top collapsed" data-toggle="collapse" data-target="#language" aria-expanded="true" aria-controls="language">
      <span class="current-language">
        <span class="lang-1 active">
          {% if settings.flag_user_icon %}
          <img alt="" src="{{ 'flag_icon_1.png' | asset_url }}">
          {% endif %}
          {{ settings.multi_language_1 }}

        </span>
        <span class="lang-2">
          {% if settings.flag_user_icon %}
          <img alt="" src="{{ 'flag_icon_2.png' | asset_url }}">
          {% endif %}
          {{ settings.multi_language_2 }}
        </span>
      </span>
      <i class="icon-angle-down"></i>
    </a>
    <div id="language" class="collapse" aria-labelledby="language" data-parent="#menu-settings">
      <ul class="level0 select-language">
        <li class="level1"><a href="javascript:void(0);" class="active" data-lang="1">{% if settings.flag_user_icon != blank %}<img alt="" src="{{ 'flag_icon_1.png' | asset_url }}"> {{ settings.multi_language_1 }}{% else %} {{ settings.multi_language_1 }}{% endif %}</a></li>
        <li class="level1"><a href="javascript:void(0);" data-lang="2">{% if settings.flag_user_icon != blank %}<img alt="" src="{{ 'flag_icon_2.png' | asset_url }}"> {{ settings.multi_language_2 }}{% else %} {{ settings.multi_language_2 }}{% endif %}</a></li>
      </ul>
    </div>
  </div> 
  <script>
    translator.updateLangSwitcher();
  </script>
  {%- endif -%}
</div> 
{%- if settings.header_compare_enable != blank and settings.header_design != 'type17' and settings.header_design != 'type16' -%} 
<div class="compare-link">
  <a id='header-compare' href="javascript:;" ><i class="icon-compare-link"></i><span {% if settings.language_enable %}data-translate="header.settings.compare"{% endif %}>{{'header.settings.compare' | t}}</span> <span class='compareCount'>(0)</span></a>
</div>
{%- endif -%}
